{
  "name": "SQL Importer",
  "description": "Import SQL data from your own database",
  "picture": "picture.png",
  "version": "0.0.1",
  "tags": [
    "incoming",
    "oneColumn"
  ],
  "private_settings": [
    {
      "name": "enabled",
      "title": "Enable Sync",
      "type": "boolean",
      "default": "false"
    },
    {
      "name": "overwrite",
      "title": "Overwrite data in Hull in case of a conflict",
      "type": "boolean",
      "default": "true"
    },
    {
      "type": "string",
      "format": "title",
      "name": "db_info",
      "title": "Database connection"
    },
    {
      "name": "db_type",
      "type": "string",
      "title": "Type",
      "enum": [
        "postgres",
        "mysql"
      ],
      "default": "postgres",
      "required" : true
    },
    {
      "name": "db_host",
      "type": "string",
      "title": "Host Name",
      "required" : true
    },
    {
      "name": "db_port",
      "type": "string",
      "title": "Port",
      "required" : true
    },
    {
      "name": "db_name",
      "type": "string",
      "title": "Database",
      "required" : true
    },
    {
      "name": "db_user",
      "type": "string",
      "title": "Usernane",
      "required" : true
    },
    {
      "name": "db_password",
      "type": "string",
      "title": "Password",
      "required" : true
    },
    {
      "name": "query_template",
      "title": "Template of query to run",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_sync_at",
      "title": "Last sync",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_updated_at",
      "title": "Last updated_at",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "last_job_id",
      "title": "Last job ID",
      "type": "string",
      "format": "hidden"
    }
  ],
  "resources": [],
  "readme": "readme.md",
  "admin": "admin.html",
  "ui": false,
  "schedules": [
    {
      "url": "/sync",
      "type": "cron",
      "value": "0 */3 * * *"
    }
  ]
}
